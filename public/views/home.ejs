<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <title><%= pageTitle %></title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" />

    <script src="/js/bootstrap.min.js"></script>
  </head>
  <body>
    <!-- Header -->
    <div class="container-fluid bg-light">
      <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <a class="navbar-brand" href="/">Dashboard</a>

          <div class="collapse navbar-collapse" width="100%" id="navbarNav">
            <ul class="navbar-nav" style="height: 4rem">
              <li class="nav-item p-2">
                <a
                  class="nav-link"
                  href="#"
                  data-bs-toggle="modal"
                  data-bs-target="#exampleModal"
                >
                  <img
                    src="/<%= avatar %>"
                    class="rounded-circle"
                    width="40"
                    height="40"
                    alt="avatar"
                  />
                  <%=name %>
                </a>
              </li>
            </ul>
          </div>
          <form method="post" action="/logout">
            <button class="nav-item mr-3 nav-link p-3" type="submit">
              Logout
            </button>
          </form>
        </nav>
      </div>
    </div>
    <!-- File Upload Section -->
    <div class="container">
      <div class="row">
        <div class="card col-md-8 mt-3">
          <div class="card-header">File Upload</div>
          <div class="card-body">
            <form action="/upload" method="post" enctype="multipart/form-data">
              <div class="form-group">
                <label for="file">Choose File:</label>
                <input
                  type="file"
                  class="form-control-file"
                  id="file"
                  name="fileinput"
                  multiple
                />
              </div>
              <button type="submit" class="btn btn-primary">Upload</button>
            </form>
          </div>
        </div>
        <div class="card col-md-4 mt-3">
          <div class="card-header">Remaining Storage</div>
          <div class="card-body">
            <div class="progress">
              <!-- Change the value of aria-valuenow and style width according to the actual storage percentage -->
              <div
                id="storage"
                class="progress-bar"
                role="progressbar"
                style="width: <%= usedCpacityPercent %>%"
                aria-valuenow="<%= usedCpacityPercent %>"
                aria-valuemin="0"
                aria-valuemax="100"
              >
                <%= usedCpacityPercent %>%
              </div>
            </div>
          </div>
        </div>
      </div>
      <br />

      <!--- main -->
      <!-- Uploaded Files Table -->
      <div class="row">
        <div class="card">
          <div class="card-header">Uploaded Files</div>
          <div class="card-body">
            <table class="table">
              <thead>
                <tr>
                  <th>File Name</th>
                  <th>File size</th>
                  <th>Upload date</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% filesList.forEach(file => { %>
                <tr>
                  <td>
                    <%- file.filename.substring(file.filename.indexOf("-",
                    file.filename.indexOf("-") + 1) +1) %>
                  </td>
                  <td><%= Math.floor(file.size/1204) %> KB</td>
                  <td><%= file.createdAt.toLocaleString() %></td>
                  <td>
                    <form method="post" action="/<%= file.id %>/medias">
                      <button
                        type="submit"
                        onclick="return confirm('Are you sure you want to delete this item')"
                        class="btn btn-danger btn-sm"
                      >
                        Delete
                      </button>
                    </form>
                  </td>
                </tr>
                <% }) %>
              </tbody>
              <tfoot>
                <tr>
                  <th class="text-end">Total Size</th>
                  <th><%= Math.floor(userUsedCapacity/1204) %> KB</th>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Avatar Modal -->
    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">
              Change Avatar
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <form method="post" action="/avatar" enctype="multipart/form-data">
            <div class="modal-body">
              <div class="form-group">
                <label for="avatar">Choose Avatar:</label>
                <input
                  type="file"
                  class="form-control-file"
                  id="avatar"
                  name="avatar"
                />
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Close
              </button>
              <button type="submit" class="btn btn-primary">
                Save changes
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
