datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  avatarUrl String?
  role      Role     @default(CLIENT)
  Medias    Media[]
  capacity  Int      @default(10)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Media {
  id        String   @id @default(cuid())
  mimetype  String
  filename  String
  size      Int
  userId    Int
  User      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

enum Role {
  CLIENT
  ADMIN
  OPERATOR
  DEACTIVATED
}
