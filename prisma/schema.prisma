generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    email     String   @unique
    password  String

    score  Int?
    answer Answer[]
    quize  quiz[]
}

model Answer {
    id Int @id @default(autoincrement())

    answer Int

    User       User?     @relation(fields: [userId], references: [id])
    userId     Int?
    Question   Question? @relation(fields: [questionId], references: [id])
    questionId Int       @unique
}

model category {
    id    Int    @id @default(autoincrement())
    title String

    Question   Question? @relation(fields: [questionId], references: [id])
    questionId Int?
}

model quiz {
    id       Int        @id @default(autoincrement())
    question Question[]
    User     User?      @relation(fields: [userId], references: [id])
    userId   Int?
}

model Question {
    id            Int    @id @default(autoincrement())
    content       String
    level         String
    a             String
    b             String
    c             String
    d             String
    correctAnswer String
    quiz          quiz?  @relation(fields: [quizId], references: [id])
    quizId        Int?

    answer   Answer?
    category category[]
    // answerId Int
}
